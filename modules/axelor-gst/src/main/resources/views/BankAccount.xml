<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.2.xsd">

  <selection name="bankAccount.type.selection">
    <option value="saving">Saving</option>
    <option value="current">Current</option>
  </selection>


  <form model="com.axelor.gst.db.BankAccount" title="Company"
    name="bankAccount-form">
    <panel itemSpan="6">
      <field name="bank" title="Bank Name" />
      <field name="accountNo"  />
      <field name="ifsc" title="IFSC Code" />
      <field name="type" title="Account Type" />
    </panel>
    <panel colSpan="12" title="Bank Address Details">
      <field name="address" colSpan="12" />
    </panel>
  </form>

  <grid model="com.axelor.gst.db.BankAccount" title="Bank Account"
    name="bankAccount-grid">
    <field name="bank" />
    <field name="accountNo" />
    <field name="ifsc" />
    <field name="type" />
  </grid>



</object-views>
